<div class="container">
  <%= simple_form_for [ @enquiry ] do |f| %>
    <%= f.input :property_address, label: "Dirección" %>
    <%= f.input :information, label: "Descripción del trabajo" %>
    <%= f.input :date, html5: true %>
    <%= f.input :timeslot, label: "Selecciona su disponibilidad", collection: ['AM', 'PM', 'Todo el día']%>
    <%= f.hidden_field "contractor_id", value: @contractor.id %>
    <%= f.hidden_field "title", value: "#{@profession.name} en #{@enquiry.property_address}" %>
    <%= f.submit "Confirmar" %>
  <% end %>
</div>
